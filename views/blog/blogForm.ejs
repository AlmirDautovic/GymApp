<% layout('layouts/boilerplate') %>
    <div class="container justify-content-center">
        <div class="row">
            <h1 class="text-center mb-5">Create Blog Post</h1>
            <form class="col-sm-12 col-md" action="/blogs" method="POST">
                <div class="mb-3 col-md-4 mx-auto">
                    <label for="date" class="form-label">Date</label>
                    <input type="date" class="form-control" id="date" name="date" required>
                </div>
                <div class="mb-3 col-md-4 mx-auto">
                    <label for="blog_title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="blog_title" name="blog_title" required>
                </div>
                <div class="mb-3 col-md-4 mx-auto">
                    <label for="blog_content" class="form-label">Add your Text</label>
                    <textarea rows="5" class="form-control" id="blog_content" name="blog_content" required></textarea>
                </div>
                <div class="mb-3 col-md-4 mx-auto">
                    <label for="profile_image" class="form-label">Upload Image</label>
                    <input class="form-control" type="file" id="profile_image" name="profile_image">
                </div>
                <div class="col-md-4 mx-auto text-end">
                    <button class="btn btn-success">Post</button>
                </div>
            </form>
        </div>
    </div>