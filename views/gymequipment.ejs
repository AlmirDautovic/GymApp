<% layout('layouts/boilerplate') %>
    <div class="row">
        <div id="equipmentItem" class="col-md-3">
            <h1>Create Gym Item</h1>
            <form action="">
                <div class="mb-3 col-md">
                    <label for="item_name" class="form-label">Gym Item</label>
                    <input type="text" class="form-control" id="item_name" name="item_name" required>
                </div>
                <div class="mb-3 col-md">
                    <label for="image_url" class="form-label">Image URL</label>
                    <input type="text" class="form-control" id="image_url" name="image_url" value="no_url"
                        placeholder="no_url">
                </div>
                <button class="btn btn-success" onclick="displayItems(this)">INSERT</button>
            </form>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-6">
            <h1>List of Gym Items</h1>
            <ol>

            </ol>
        </div>
    </div>