<% layout('layouts/boilerplate') %>
    <div id="equipmentItem" class="container">
        <h1>Create Gym Item</h1>
        <form action="/gymequipment" method="POST">
            <div class="mb-3 col-md-3">
                <label for="gymItem" class="form-label">Gym Item</label>
                <input type="text" class="form-control" id="gymItem" name="gymItem" required>
            </div>
            <div class="mb-3 col-md-3">
                <label for="image_url" class="form-label">Image URL</label>
                <input type="url" class="form-control" id="image_url" name="image_url" value="no_url"
                    placeholder="no_url" required>
            </div>
            <button class="btn btn-success">INSERT</button>
        </form>
    </div>