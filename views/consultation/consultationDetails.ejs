<% layout('layouts/boilerplate') %>
    <% layout('layouts/boilerplate') %>
        <table class="table table-striped" id="">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Height</th>
                    <th scope="col">Weight</th>
                    <th scope="col">Date of Birth</th>
                    <th scope="col">Excersize/Week</th>
                    <th scope="col">Excersize Duration</th>
                    <th scope="col">Consultation Status</th>
                </tr>
            </thead>

            <tbody id="consultationTable">
                <% for(let [i,consultation ] of consultations.entries()) {%>
                    <tr id="<%=++i %>">
                        <td scope="row">
                            <%=i %>
                        </td>

                        <td id="consultationUsername">
                            <%=consultation.name %>
                        </td>
                        <td>
                            <%=consultation.lastName %>
                        </td>
                        <td id="consultationEmail">
                            <%=consultation.email %>
                        </td>
                        <td>
                            <%=consultation.phone %>
                        </td>
                        <td>
                            <%=consultation.height %>
                        </td>
                        <td>
                            <%=consultation.weight %>
                        </td>
                        <td>
                            <%=consultation.birth_date %>
                        </td>
                        <td>
                            <%=consultation.trainings_per_week %>
                        </td>
                        <td>
                            <%=consultation.training_duration %>
                        </td>
                        <td>
                            <% if(consultation.userId==="" ) {%>
                                <button id="<%=i %>" value="<%=--i %>" class="btn btn-small btn-info"
                                    onclick="userApproval(this)">Aprove User</button>
                                <% } else { %>

                                    <%=consultation.userId %>
                                        <% } %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>