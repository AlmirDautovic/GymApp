<% layout('layouts/boilerplate') %>

    <div id="equipmentCard" class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <%=item.item_name %>
                </h5>
                <p class="card-text"><b>Description</b>: <br>
                    <%=item.description %>
                </p>
                <p class="card-text"><b>Usage</b>: <br>
                    <%=item.usage %>
                </p>
            </div>
            <img src="/public/images/equipment/<%=item.item_image %>" class=" card-img-bottom" alt="...">
        </div>
    </div>