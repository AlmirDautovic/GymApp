<% layout('layouts/boilerplate') %>
    <h1>Edit Account</h1>
    <form action="/users/<%=user._id%>?_method=PUT" method="POST">
        <div class="mb-3 col-md-4">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" name="username" value="<%=user.username %> " required>
        </div>
        <div class="mb-3 col-md-4">
            <label for="password" class="form-label">Password</label>
            <input type="text" class="form-control" id="password" name="password" value="<%=user.password%>" required>
        </div>
        <div class="mb-3 vol-md-4">
            <label for="isLogedIn">Status</label>
            <select name="isLogedIn" id="isLogedIn">
                <option value="-">-</option>
                <option value="true">Active</option>
                <option value="false">Inactive</option>
            </select>
        </div>
        <button class="btn btn-success">Submit</button>
        <div class="col-sm">
            <a class="btn btn-outline-dark my-2" href="/users/<%=user._id%>" role="button">Return</a>
        </div>
    </form>