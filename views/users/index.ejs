<% layout('layouts/boilerplate') %>
    <div class="container">
        <div class="col">
            <div class="row ">
                <div class=" col-sm col-md-10">
                    <h1 id="allusers">List of all users: </h1>
                    <div class="col-sm col-md-8 mt-3 mb-5">
                        <div id="searchElement" class="input-group mb-3 search_input">
                            <input type="text" id="search_input" class="form-control" placeholder="Enter username"
                                aria-label="Enter username" aria-describedby="searchButton">
                            <button class="btn btn-outline-secondary" type="button" id="searchButton"
                                onclick="getSearchResults()">Search</button>
                        </div>
                        <div class="col-sm col-md mt-3">
                            <div class="alert alert-danger" role="alert" id="search_allert" hidden>
                                Invalid action! (Searched term must contain more than 2 characters) Please insert valid
                                user name, ex. "John Smith"
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <ul id="userList">
                            <% for(let user of users) {%>
                                <li>
                                    <div class="row align-items-center">
                                        <div class="col-md-1 col-sm">
                                            <img src="/public/images/profile/<%=user.profile_image %>" width="50px"
                                                height="50px" class="img-fluid" alt="...">
                                        </div>
                                        <div class="col-md-2 col-sm text-md">
                                            <%=user.username %>
                                                <!-- <a class="btn btn-primary btn-sm" href="#" ">View User Details</a> -->
                                        </div>
                                        <div class="col-md-2 col-sm-12 align-middle">
                                            <% if(user.status) {%>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value=""
                                                        id="flexCheckChecked" checked disabled>
                                                    <label class="form-check-label" for="flexCheckChecked">
                                                        Active
                                                    </label>
                                                </div>
                                                <% } else { %>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value=""
                                                            id="flexCheckDefault" disabled>
                                                        <label class="form-check-label" for="flexCheckDefault">
                                                            Active
                                                        </label>
                                                    </div>
                                                    <% } %>
                                        </div>
                                        <div class="col-md-2 col-sm-12">
                                            <a role="button" class="btn btn-outline-dark" href="/users/<%=user._id%>"
                                                style="--bs-btn-padding-y: .20rem; --bs-btn-padding-x: .4rem; --bs-btn-font-size: .65rem;">
                                                Show More
                                            </a>
                                        </div>
                                        <div class="col-md-2 col-sm-12">
                                            <button type="button" class="btn btn-sm btn-danger" onclick="getUser(this)"
                                                value="<%=user._id%>" name="deleteBtn">Delete user</button>
                                        </div>
                                    </div>
                                </li>
                                <% } %>
                        </ul>
                    </div>
                </div>
                <div class="col-sm col-md-2 ms-auto">
                    <form id="selectUser">
                        <label for="status">Select users:</label>
                        <select onchange="getStatusValue(this)" name="status" id="status">
                            <option value="">All Users</option>
                            <option value="true">Active</option>
                            <option value="false">Inactive</option>
                        </select>
                        <!-- <input type="submit"> -->
                    </form>
                </div>
            </div>

        </div>
    </div>