<% layout('layouts/boilerplate') %>
    <div class="container">
        <div class="col">
            <div class="row align-middle">
                <div class=" col-sm col-md-8">
                    <h1>List of all users: </h1>
                    <div class="col">
                        <ul>
                            <% for(let user of users) {%>
                                <li>
                                    <div class="row">
                                        <div class="col-md-6 col-sm text-md">
                                            <%=user.username %>
                                                <!-- <a class="btn btn-primary btn-sm" href="#" ">View User Details</a> -->
                                        </div>
                                        <div class="col-md-3 col-sm-12">
                                            <% if(user.status) {%>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value=""
                                                        id="flexCheckChecked" checked disabled>
                                                    <label class="form-check-label" for="flexCheckChecked">
                                                        Active
                                                    </label>
                                                </div>
                                                <% } else { %>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value=""
                                                            id="flexCheckDefault" disabled>
                                                        <label class="form-check-label" for="flexCheckDefault">
                                                            Active
                                                        </label>
                                                    </div>
                                                    <% } %>
                                        </div>
                                        <div class="col-md-3 col-sm-12">
                                            <a role="button" class="btn btn-outline-dark" href="/users/<%=user._id%>"
                                                style="--bs-btn-padding-y: .20rem; --bs-btn-padding-x: .4rem; --bs-btn-font-size: .65rem;">
                                                Show More
                                            </a>
                                        </div>
                                    </div>
                                </li>
                                <% } %>
                        </ul>
                    </div>
                </div>
                <div class="col-sm col-md-4 ms-auto">
                    <form action="/users" method="get">
                        <label for="status">Select users by their activity status:</label>
                        <select name="status" id="status">
                            <option value=""></option>
                            <option value="true">Active</option>
                            <option value="false">Inactive</option>
                        </select>
                        <input type="submit">
                    </form>
                </div>
            </div>

        </div>
    </div>