<% layout('layouts/boilerplate') %>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>
                    Details of User:
                </h1>
                <div class="card" style="width: 18rem;">
                    <img src="/public/images/profile/<%=user.profile_image %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            Username: <%=user.username %>
                        </h5>
                        <ul>
                            <li>Phone Number: <%=user.phone %>
                            </li>
                            <li>E-mail: <%=user.email %>
                            </li>
                            <li>Status:
                                <% if(user.status) {%>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked"
                                            checked disabled>
                                        <label class="form-check-label" for="flexCheckChecked">
                                            Active
                                        </label>
                                    </div>
                                    <% } else { %>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value=""
                                                id="flexCheckDefault" disabled>
                                            <label class="form-check-label" for="flexCheckDefault">
                                                Active
                                            </label>
                                        </div>
                                        <% } %>
                            </li>
                            <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
                    </div>
                </div>

                <div class="col-sm mt-3">
                    <a class="btn btn-outline-dark" href="/users/<%=user._id%>/edit" role="button">Edit User
                        Informations</a>
                </div>
                <div class="col-sm-3 mt-1">
                    <!-- <form action="/users/?_method=DELETE" method="POST">
                            <button class="btn btn-outline-danger">Delete User</button>
                        </form> -->
                    <button class="btn btn-outline-danger" value="<%=user._id%>" onclick="deleteOne(this)">Delete
                        User</button>
                </div>
                </ul>
            </div>
            <div class="col-md-6 mb-5 ms-auto  text-center">
                <button type="button" class="btn btn-info" id="show">Show other users</button>
                <input type="text" name="id" id="userId" hidden value="<%=user._id%>">
                <div class="container text-left">
                    <h3 class="mt-3" id="listTitle"></h3>
                    <div>
                        <ul id="list">

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>