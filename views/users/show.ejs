<% layout('layouts/boilerplate') %>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>
                    Details of User: <%=user.username %>
                </h1>
                <ul>
                    <li>Username: <%=user.username %>
                    </li>
                    <li>Password: <%=user.password %>
                    </li>
                    <li>Status:
                        <% if(user.status) {%>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked
                                    disabled>
                                <label class="form-check-label" for="flexCheckChecked">
                                    Active
                                </label>
                            </div>
                            <% } else { %>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault"
                                        disabled>
                                    <label class="form-check-label" for="flexCheckDefault">
                                        Active
                                    </label>
                                </div>
                                <% } %>
                    </li>
                    <div class="col-sm mt-3">
                        <a class="btn btn-outline-dark" href="/users/<%=user._id%>/edit" role="button">Edit User
                            Informations</a>
                    </div>
                </ul>
            </div>
            <div class="col-md-6 mb-5">
                <button type="button" class="btn btn-info" id="show">Show other users</button>
                <input type="text" name="id" id="userId" hidden value="<%=user._id%>">
                <div class="container text-left">
                    <h3 class="mt-5">List of other registered users :</h3>
                    <div>
                        <ul id="list">

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>